    <script>
        function toggleSequence(sequenceNumber) {
            const sequence = document.querySelector(`.sequence-${sequenceNumber}`);
            const allSequences = document.querySelectorAll('.sequence');
            
            // Fermer les autres s√©quences
            allSequences.forEach(seq => {
                if (seq !== sequence) {
                    seq.classList.remove('active');
                }
            });
            
            // Toggle la s√©quence actuelle
            sequence.classList.toggle('active');
        }

        // Animation des barres de progression au chargement
        window.addEventListener('load', function() {
            setTimeout(() => {
                const progressBars = document.querySelectorAll('.progress-fill');
                progressBars.forEach(bar => {
                    const width = bar.style.width;
                    bar.style.width = '0%';
                    setTimeout(() => {
                        bar.style.width = width;
                    }, 500);
                });
            }, 1000);
        });

        // Ouvrir la premi√®re s√©quence par d√©faut
        document.addEventListener('DOMContentLoaded', function() {
            toggleSequence(1);
        });
    </script>
